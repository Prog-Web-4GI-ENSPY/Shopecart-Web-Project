                                        "id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "cartId": {
                                            "type": "integer",
                                            "example": 5
                                        },
                                        "productVariantId": {
                                            "type": "integer",
                                            "example": 10
                                        },
                                        "quantity": {
                                            "type": "integer",
                                            "example": 2
                                        },
                                        "created_at": {
                                            "type": "string",
